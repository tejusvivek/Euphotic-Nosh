<MyCardWidget>
    id: my_widget
    orientation: 'lr-tb'
    cols: 1
    padding: dp(2)
    height: self.minimum_height

<MyImageWidget>
    size_hint: 1.0, 1.0
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

<MyCardContent>
    orientation: "horizontal"
    size_hint_y: None

<MyCard>
    id: card
    orientation: "vertical"
    size_hint: 1.0, 1.0
    height: self.minimum_height
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

    BoxLayout:
        id: box
        pos_hint: {"center_x": 0.5, "center_y": 0.5}












